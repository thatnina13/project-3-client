{{#each party as |party|}}
  <section data-id="{{party._id}}" class="party-log" >
    <div class="card-deck">
        <div class="card" style="width:600px">
          <img class="card-img-top" src="https://i.ytimg.com/vi/pAuvAkVtyd8/maxresdefault.jpg" alt="Card image">
          <div class="card-body">
    <h6>Date:</h6>
    <p>
      {{limit party.date 10}}
    </p>
    <h6>Title:</h6>
    <p>
        {{party.title}}
    </p>
    <h6>Details:</h6>
    <p>
        {{party.details}}
    </p>


    <form class="update-party" data-id="{{party._id}}">
        <input type="date" name="party[date]" placeholder="date" required>
        <input type="text" name="party[title]" placeholder="title" required>
        <input type="text" name="party[details]" placeholder="details" required>
        <button class="btn btn-primary"> update your party! </button>
    </form>
    <btn class= "btn btn-danger btn-sm delete" data-id="{{party._id}}"> delete </btn>
    <div class="emoji-toggle emoji-vote">
      <input type="checkbox" id="toggle4" class="toggle">
      <div class="emoji"></div>
      <label for="toggle4" class="well"></label>
    </div>
  </div>
</div>
</div>
  </section>

{{/each}}
